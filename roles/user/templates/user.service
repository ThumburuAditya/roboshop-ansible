[Unit]
Description = User Service
[Service]
User=roboshop
Environment={{ lookup('aws_ssm', 'dev.mongo', region = 'us-east-1' ) }
Environment=REDIS_HOST={{ lookup('aws_ssm', 'dev.redis_host', region = 'us-east-1' ) }
Environment=MONGO_URL={{ lookup('aws_ssm', 'dev.mongo_url', region = 'us-east-1' ) }
ExecStart=/bin/node /app/server.js
SyslogIdentifier=user

[Install]
WantedBy=multi-user.target